{
	"name": "private-assistant-commons-dev-environment",
	"build": {
		"dockerfile": "Containerfile",
		"context": "."
	},
	"features": {
		"ghcr.io/anthropics/devcontainer-features/claude-code:1.0": {}
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-python.python",
				"samuelcolvin.jinjahtml",
				"streetsidesoftware.code-spell-checker",
				"christian-kohler.path-intellisense",
				"charliermarsh.ruff",
				"ms-python.mypy-type-checker",
				"tamasfe.even-better-toml",
				"github.vscode-github-actions",
				"oderwat.indent-rainbow",
				"mhutchie.git-graph",
				"vivaxy.vscode-conventional-commits",
				"eamodio.gitlens",
			],
			"settings": {
				"terminal.integrated.defaultProfile.linux": "zsh",
				"terminal.integrated.profiles.linux": {
					"bash": {
						"path": "bash",
						"icon": "terminal-bash"
					},
					"zsh": {
						"path": "zsh"
					}
				},
				"editor.formatOnSave": true
			}
		}
	},
	"containerEnv": {
		"HOME": "/home/vscode",
		"ANTHROPIC_API_KEY": "${localEnv:ANTHROPIC_API_KEY}",
    	"CLAUDE_CONFIG_DIR": "/home/node/.claude"
	},
	"mounts": [
		{
			"source": "claude-code-bashhistory-${devcontainerId}",
			"target": "/commandhistory",
			"type": "volume"
		},
		{
			"source": "${localWorkspaceFolder}/.claude",
			"target": "/workspaces/.claude",
			"type": "bind",
			"consistency": "cached"
		}
	],
	"postCreateCommand": "uv sync --group dev && echo 'Claude Code is ready! Run: claude' && echo 'For unattended operation: claude --dangerously-skip-permissions'"
}